# Configurações de Ambiente - TV Panel System
# Copie este arquivo para .env e configure as variáveis

# Ambiente de execução
NODE_ENV=development

# URLs da API
VITE_API_URL=http://localhost:5000/api
VITE_BACKEND_URL=http://localhost:5000

# Configurações de Build
VITE_BUILD_SOURCEMAP=true
VITE_BUILD_MINIFY=false

# Cache e Performance
VITE_ENABLE_CACHE=true
VITE_CACHE_DURATION=3600

# Logs e Debug
VITE_LOG_LEVEL=info
VITE_ENABLE_DEBUG=true

# Performance
VITE_ENABLE_LAZY_LOADING=true
VITE_CHUNK_SIZE_WARNING_LIMIT=1000

# Segurança
VITE_ENABLE_HTTPS=false
VITE_CORS_ORIGIN=*

# Informações da Aplicação
VITE_APP_NAME="TV Panel System"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="Sistema de Gerenciamento de Painéis de TV"

# Upload de Arquivos
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Timeouts da API
VITE_API_TIMEOUT=30000
VITE_UPLOAD_TIMEOUT=60000