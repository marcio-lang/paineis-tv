# Configurações de Produção - Sistema de Painéis TV
NODE_ENV=production

# URLs de Produção
VITE_API_URL=http://localhost:5000
VITE_BACKEND_URL=http://localhost:5000

# Configurações de Build
VITE_BUILD_MODE=production
VITE_ENABLE_SOURCEMAP=false

# Configurações de Cache
VITE_CACHE_ENABLED=true

# Configurações de Logging
VITE_LOG_LEVEL=error

# Configurações de Performance
VITE_LAZY_LOADING=true
VITE_CODE_SPLITTING=true

# Configurações de Segurança
VITE_SECURE_COOKIES=true
VITE_HTTPS_ONLY=false

# Configurações do Sistema
VITE_APP_NAME="Sistema de Painéis TV"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="Sistema de gerenciamento de painéis para TV"

# Configurações de Upload
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Configurações de Timeout
VITE_API_TIMEOUT=30000
VITE_REQUEST_TIMEOUT=15000